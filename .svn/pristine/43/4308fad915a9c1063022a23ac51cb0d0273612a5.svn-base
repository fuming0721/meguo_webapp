router.beforeEach((to, from, next) => {
  if (to.meta.title) {
    bridge.callhandler('setTitle', to.meta.title)
    document.title = to.meta.title
  } else {
    bridge.callhandler('setTitle', to.query.title)
    document.title = to.query.title
  }
  next()
})

